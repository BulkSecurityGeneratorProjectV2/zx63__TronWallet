<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tron.MyController.CreateTransactionController">
    <children>
        <AnchorPane maxHeight="450.0" maxWidth="800.0" styleClass="root-float">
            <children>
                <HBox alignment="CENTER_LEFT" layoutX="26.0" prefHeight="68.0" prefWidth="600.0" styleClass="title-banner" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <children>
                        <Label maxHeight="1.7976931348623157E308" styleClass="title-label" text="Create Unsigned Transaction">
                            <font>
                                <Font size="30.0" />
                            </font>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                            <padding>
                                <Insets left="20.0" right="20.0" />
                            </padding>
                        </Label>
                    </children>
                </HBox>
                <HBox fx:id="contentHbox" alignment="CENTER" spacing="15.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="200">
                    <children>
                        <VBox alignment="CENTER_LEFT" prefWidth="350.0" spacing="10">
                            <children>
                                <TextField fx:id="fromAddress" editable="false" promptText="from tron address" />
                                <TextField fx:id="toAddress" promptText="to tron address" />
                                <TextField fx:id="amount" promptText="0.00 TRX" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox fx:id="qrcodeBox" alignment="CENTER" spacing="20" visible="false" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="150">
                    <children>
                        <ImageView fx:id="qrcode" fitHeight="200" fitWidth="200" />
                        <TextArea fx:id="qrcodeString" editable="false" focusTraversable="false" prefHeight="200" prefWidth="400" wrapText="true" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="100" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
                    <children>
                        <Button onAction="#createClicked" text="Create" textAlignment="CENTER" textOverrun="CLIP" wrapText="true" />
                        <Button cancelButton="true" onAction="#cancel" text="Cancel" textAlignment="CENTER" textOverrun="CLIP" wrapText="true" />
                    </children>
                </HBox>
            </children>
            <effect>
                <DropShadow />
            </effect>
        </AnchorPane>
    </children>
</StackPane>
